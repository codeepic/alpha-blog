<h1 class="center"><%= @user.username %></h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>

<h4 class="center"><%= @user.username %> articles</h4>

<%= render 'articles/article', obj: @user_articles %>
<!-- used to be @user.articles, but for pagination to work had to be changed-->

<div class="center">
  <%= will_paginate @user_articles %>
</div>

<p><%= @user.email %></p>
<%= link_to 'edit user', edit_user_path(@user) %>